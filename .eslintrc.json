{
	"extends": "airbnb",
	"plugins": [
		"react",
		"jsx-a11y",
		"import"
	],
	"rules": {
		"react/jsx-filename-extension": [1, {
			"extensions": [".js", ".jsx"]
		}],
		"indent": ["error", "tab"],
		"import/no-named-default": 0,
		"no-tabs": 0,
		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"]
	},
	"env": {
		"browser": true
	},
	"globals": {
		"it": true
	}
}